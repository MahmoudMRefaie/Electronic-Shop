<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutStyleRegisteration" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/whiteColor</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextAppearance">@style/activeLog</item>
    </style>

    <style name="activeLog" parent="Theme.MaterialComponents.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="RippleStyleGrey">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/greyColor</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

</resources>